@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 d-flex align-items-stretch">
            <div class="card product-card w-100 shadow border-top border-5 rounded-4">
                <img src="@product.ImageUrl" class="card-img-top rounded-top product-image" alt="@product.Title" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-center text-uppercase text-black-50">@product.Title</h5>
                        <p class="card-text text-warning text-center mb-2">by <strong>@product.Auther</strong></p>
                    </div>
                    <div class="text-center">
                        <p class="text-black-50 mb-1">
                            List Price:
                            <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                        </p>
                        <p class="text-black-50 mb-3">
                            As low as:
                            <span class="fw-semibold">@product.Price100.ToString("c")</span>
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <div class="flex-fill">
                                    <a asp-action="Details" asp-route-ProductId="@product.Id" class="btn btn-primary flex-fill">
                                        Details
                                    </a>
                                </div>
                                <div class="flex-fill">
                                    <form asp-action="AddToCart" asp-controller="Cart" asp-route-returnUrl="@Context.Request.Path" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-cart-fill text-primary"></i>
                                            <span>Cart</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>





                </div>
            </div>
        </div>
    }
</div>



